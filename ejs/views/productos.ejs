<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
</head>

<body>

    <section>

        <h2>Vista de Productos</h2>
        <div> <a href="/api/productos/add">
                <button> Agregar producto</button>
            </a>
        </div>


        <% if (productos.length===0) { %>
            <h2>No se encontraron productos</h2>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% productos.forEach(producto=> { %>
                            <tr>
                                <td>
                                    <%= producto.id %>
                                </td>
                                <td>
                                    <%= producto.nombre %>
                                </td>
                                <td>
                                    <%= producto.precio %>
                                </td>
                                <td>
                                    <img src="<%= producto.img %>" width="35%" alt="<%= producto.nombre %>">
                                </td>
                            </tr>
                            <div>
                            </div>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
    </section>
</body>

</html>